<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FAFA"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 로고 -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="293dp"
            android:layout_height="288dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:contentDescription="앱 로고"
            android:src="@drawable/eartest" />

        <!-- 테스트 시작 버튼 -->
        <Button
            android:id="@+id/btnStartTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="테스트 시작"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_cyan_button"
            android:layout_marginTop="40dp"
            android:padding="18dp" />

        <!-- 이어폰 리스트 버튼 -->
        <Button
            android:id="@+id/btnEarphoneList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추천 이어폰 리스트"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_mint_button"
            android:layout_marginTop="20dp"
            android:padding="18dp" />

        <!-- 이어폰 검색 입력 -->
        <EditText
            android:id="@+id/editQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이어폰 이름 입력"
            android:inputType="text"
            android:layout_marginTop="20dp" />

        <!-- 이어폰 검색 버튼 -->
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="검색"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"/>

        <!-- 결과: 상품명 -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상품명:"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <!-- 결과: 최저가 -->
        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가격:"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- 결과: 이미지 -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
